[sqlfluff]
verbose = 1
nocolor = False
dialect = trino
templater = jinja
rules = None
exclude_rules = L003,L011,L022,L031,JJ01,LT04,RF04,ST06,AM05,RF02
output_line_length = 100
max_line_length = 150

[sqlfluff:rules:layout.indent]
indented_joins = True
tab_space_size = 4
indent_unit = space

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = lower

[sqlfluff:templater:jinja:context]
start_time='2025-01-01'
end_time='2025-01-02'
time_frequency='month'

[sqlfluff:rules:aliasing.table]
aliasing = explicit

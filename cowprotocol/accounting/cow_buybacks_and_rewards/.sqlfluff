[sqlfluff]
verbose = 1
nocolor = False
dialect = postgres
templater = jinja
rules = None
exclude_rules = L003,L011,L022,L031,LT04,JJ01
output_line_length = 100
max_line_length = 150

[sqlfluff:indentation]
indented_joins = True
tab_space_size = 4
indent_unit = space

[sqlfluff:rules:L010]
capitalisation_policy = lower

[sqlfluff:rules:L011]
aliasing = explicit
